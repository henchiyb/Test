<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/avtStudent"
        android:layout_marginTop="@dimen/detail_marginTop"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/detail_imgview_width"
        android:layout_height="@dimen/detail_imgview_height" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtLabelNameDetail"
            android:text="@string/name_label"
            android:layout_marginTop="@dimen/detail_marginTop"
            android:layout_marginLeft="@dimen/detail_marginTop"
            android:textSize="@dimen/text_size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtNameDetail"
            android:layout_marginTop="@dimen/detail_marginTop"
            android:textSize="@dimen/text_size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtLabelAgeDetail"
            android:text="@string/age_label"
            android:layout_marginTop="@dimen/detail_marginTop"
            android:layout_marginLeft="@dimen/detail_marginTop"
            android:textSize="@dimen/text_size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtAgeDetail"
            android:layout_marginTop="@dimen/detail_marginTop"
            android:textSize="@dimen/text_size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtLabelClassDetail"
            android:text="@string/name_label"
            android:layout_marginTop="@dimen/detail_marginTop"
            android:layout_marginLeft="@dimen/detail_marginTop"
            android:textSize="@dimen/text_size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtClassDetail"
            android:layout_marginTop="@dimen/detail_marginTop"
            android:textSize="@dimen/text_size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/btnDetailBack"
        android:text="@string/button_back"
        android:layout_marginTop="@dimen/detail_marginTop"
        android:layout_marginBottom="@dimen/detail_marginTop"
        android:layout_gravity="center_horizontal"
        android:background="@color/buttonBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>